<!DOCTYPE html>
<html>
  <%- include("../static/layout.ejs") %>
  <h1 class="text-center">Livros</h1>
  <div class="tableMargins">
    <button type="button" class="btn btn-secondary float-end" onclick="location.href=window.location.href+'/create'">Criar Livro</button>
    <table class="table table-dark table-striped table-hover">
      <thead>
      <tr>
        <th scope="col">Titulo</th>
        <th scope="col">Autor</th>
        <th scope="col">ISBN</th>
        <th scope="col">Detalhes</th>
        <th scope="col">Editar</th>
        <th scope="col">Apagar</th>
      </tr>
    </thead>
    <tbody>
      <%if(books.length > 0){%>
        <% for(let book of books) { %>
          <tr>
            <td scope="row"><%= book.title %></th>
            <td><%= book.author %></td>
            <td><%= book.isbn %></td>
            <td><i class="fa-solid fa-circle-plus icons"></i></td>
            <td><i class="fa-solid fa-pen icons"></i></td>
            <td><i class="fa-solid fa-trash-can icons"></i></i></td>
          </tr>
        <% } %>
      <% } else { %>
          <tr>
            <td scope="row" colspan="8" class="text-center">NÃ£o foram encontrados dados!</td>
          </tr>
        <% } %>
    </tbody>
  </table>
</div>
<%- include("../static/footer.ejs") %>
</html>
