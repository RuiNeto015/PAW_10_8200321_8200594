<!DOCTYPE html>
<html>
  <%- include("../static/layout.ejs") %>
  <h1 class="text-center">Clientes</h1>
  <div class="tableMargins">
    <button type="button" class="btn btn-secondary float-end" onclick="location.href=window.location.href+'/create'">Criar Cliente</button>
    <table class="table table-dark table-striped table-hover">
      <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Email</th>
        <th scope="col">Genero</th>
        <th scope="col">Data Nascimento</th>
        <th scope="col">Morada</th>
        <th scope="col">Telefone</th>
      </tr>
    </thead>
    <tbody>
      <%if(clients.length > 0){%>
        <% for(let client of clients) { %>
          <tr>
            <td scope="row"><%= client.name %></th>
            <td><%= client.email %></td>
            <td><%= client.gender %></td>
            <td><%= client.birth_date.getDate() %>-<%= client.birth_date.getMonth() %>-<%= client.birth_date.getFullYear() %></td>
            <td><%= client.address %></td>
            <td><%= client.phoneNumber %></td>
          </tr>
        <% } %>
      <% } else { %>
          <tr>
            <td scope="row" colspan="6" class="text-center">NÃ£o foram encontrados dados!</td>
          </tr>
        <% } %>
    </tbody>
  </table>
</div>

<%- include("../static/footer.ejs") %>
</html>
